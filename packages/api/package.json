{
  "name": "@campus-nav/api",
  "version": "1.0.0",
  "description": "Backend API for Campus Navigation System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "jest",
    "db:test-connection": "node scripts/test-connection.js",
    "db:test-parser": "node scripts/test-parser.js",
    "db:test-inserter": "node scripts/test-inserter.js",
    "db:test-seed": "node scripts/test-seed.js",
    "db:test-bidirectional": "node scripts/test-bidirectional-edges.js",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "campus",
    "navigation",
    "api",
    "express",
    "typescript"
  ],
  "author": "Campus Navigation Team",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "pg": "^8.16.0",
    "postgres": "^3.4.7",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.1",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.1",
    "jest": "^30.0.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
